@model CategoryListModel
@{
    ViewData["Title"] = "CategoryList";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
<h1>@_localizer["Admin Categories"]</h1>
<hr />
@if (Model.Categories.Count() > 0)
{
    <table class="table table-bordered">

        <thead>

            <tr>
                <td>Id</td>           
                <td>@_localizer["Name"]</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {

                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-primary btn-sm mr-2" href="/admin/editcategory/@item.Id">@_localizer["Edit"]</a>
                        <form action="/admin/deletecategory" method="post" style="display:inline">
                            <input type="hidden" name="categoryId" value="@item.Id" />
                            <button class="btn btn-danger btn-sm mr-2" type="submit">@_localizer["Delete"]</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>

    </table>

}
else
{
    <div class="alert alert-warning">
        <h4>No Products</h4>
    </div>
}
