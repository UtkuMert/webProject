@model ProductModel
@{
    ViewData["Title"] = "CreateProduct";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@*Client Tarafı Validation*@
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
   
    }
<h1>@_localizer["Create Product"] </h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="CreateProduct" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label">@_localizer["Name"]</label>
                <div class="col-md-10">
                    <input asp-for="Name" value="@Model.Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>  @*Hata mesajı yazdırılır.*@
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ImgUrl" class="col-md-2" col-form-label>@_localizer["ImgUrl"]</label>
                <div class="col-md-10">
                    <input asp-for="ImgUrl" value="@Model.ImgUrl" class="form-control" />
                    <span asp-validation-for="ImgUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-md-2" col-form-label>@_localizer["Description"]</label>
                <div class="col-md-10">
                    <textarea id="editor" asp-for="Description" class="form-control">
                      value="@Model.Description"
                    </textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="col-md-2" col-form-label>@_localizer["Price"]</label>
                <div class="col-md-10">
                    <input asp-for="Price" value="@Model.Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">

                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-danger">@_localizer["Save Product"]</button>
                </div>
            </div>

        </form>
    </div>
</div>





