
@model CategoryModel
@{
    ViewData["Title"] = "CreateCategory";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
<h1>@_localizer["Create Category"] </h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="CreateCategory" method="post">
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label">@_localizer["Name"]</label>
                <div class="col-md-10">
                    <input asp-for="Name" value="" class="form-control" />
                </div>
            </div>

            <div class="form-group row">

                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-danger">@_localizer["Save Category"] </button>
                </div>
            </div>

        </form>
    </div>
</div>





