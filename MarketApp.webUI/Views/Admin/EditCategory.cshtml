@model CategoryModel
@{
    ViewData["Title"] = "EditCategory";
}

<h1>EditCategory</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Admin" asp-action="EditCategory" method="post">
            <input type="hidden" name="categoryId" value="@Model.Id" />
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" value="@Model.Name" class="form-control" />  @***@
                </div>
            </div>
          
            <div class="form-group row">

                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-danger">Save Category</button>
                </div>
            </div>

        </form>
    </div>
    <div class="col-md-8">
        @if (Model.Products.Count() > 0)
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>Id</td>             @*tasarım daha sonra*@
                        <td>Image</td>
                        <td>Name</td>
                        <td>Price</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Products)
                    {

                        <tr>
                            <td>@item.Id</td>
                            <td>@item.ImgUrl</td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>
                                <a class="btn btn-primary btn-sm mr-2" href="/admin/products/@item.Id">Edit</a>
                                <form action="/admin/deletefromcategory" method="post" style="display:inline">
                                    <input type="hidden" name="productId" value="@item.Id" />
                                    <input type="hidden" name="categoryId" value="@Model.Id" />
                                    <button class="btn btn-danger btn-sm mr-2" type="submit">Delete</button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                <h4>No Products</h4>
            </div>
        }
    </div>
</div>





