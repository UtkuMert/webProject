@*@model Product  artık product yerine ProductListModel ile işlem yapılacak.*@
@model ProductDetailsModel
@{
    ViewData["Title"] = "Details";
}

<div class="row mt-3">
    <div class="col-md-3">
        <div class="card mb-3">
            <img src="~/images/@Model.Product.ImgUrl" alt="@Model.Product.Name" class="img-fluid" />
        </div>
    </div>
        <div class="col-md-9">
            <h1 class="mb-3">
                @Model.Product.Name
            </h1>
            <hr />
            @foreach (var category in Model.Categories)
            {
                <a href="#" class="btn btn-link">@category.Name</a>
            }
        <div class="mb-3">
            <h4>@Model.Product.Price Türk Lirası</h4>

            
                <form asp-controller="Sepet" asp-action="AddToCart" method="post" class="form-inline">
                    <input type="hidden" name="productId" value="@Model.Product.Id" />
                    <div class="input-group mb-3" >
                        <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" style="width:100px" />
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-cart-plus"></i> Add To Cart
                            </button>
                        </div>
                    </div>
                </form>
             </div>
        </div>
    </div>
<div class="row">
    <div class="col-md-12">
        <p class="p-5">
            @Html.Raw(Model.Product.Description) @*html kodları okuyor*@
        </p>
    </div>
</div>
