@model LoginModel
@{
    ViewData["Title"] = "Login";
}

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer

@*Client Tarafı Validation*@
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h1 class="mt-1">@_localizer["Login"]</h1>

<hr />

<div class="w-50 container mt-4 bg-light">
    <div class="col-md-8">
        <form asp-controller="Account" asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">

                <div class="col-md-12">
                    <label asp-for="UserName" class="" col-form-label>@_localizer["UserName"]</label>

                    <span asp-validation-for="UserName" class="text-danger"></span>

                    <input asp-for="UserName" value="@Model.UserName" class="form-control" />
                </div>
            </div>
            <div class="form-group row">

                <div class="col-md-12">
                    <label asp-for="Password" class="" col-form-label>@_localizer["Password"]</label>

                    <span asp-validation-for="Password" class="text-danger"></span>

                    <input asp-for="Password" value="@Model.Password" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-danger">@_localizer["Login"]</button>
                </div>
            </div>

        </form>
    </div>
</div>






